<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:src="@drawable/login_logo"
        android:layout_above="@+id/login_center_linearlayout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/login_title_textview"
        style="@style/CustomTextViewStyle"
        android:layout_above="@+id/login_center_linearlayout"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:text="I'M ALREADY A CLIENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/login_center_linearlayout"
        android:background="@color/white_75"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <TextView
            android:id="@+id/login_description_textview"
            style="@style/CustomTextViewStyle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/gray_dark"
            android:text="Enter your email address and soon you will receive the instructions to complete your registration process."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_username_edittext"
            android:layout_marginTop="15dp"
            style="@style/CustomEditTextStyle"
            android:drawableLeft="@drawable/ui_input_icon_user"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/login_password_edittext"
            style="@style/CustomEditTextStyle"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ui_input_icon_pass"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/login_terms_linearlayout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/login_terms_checkbox"
                android:buttonTint="@color/gray_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/CustomTextViewStyle"
                android:textColor="@color/gray_dark"
                android:text="I accept the terms and conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/login_enter_button"
            style="@style/CustomButtonStyleRed"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_recovery_button"
        style="@style/CustomButtonStyleRed"
        android:background="@android:color/transparent"
        android:layout_below="@+id/login_center_linearlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textColor="@drawable/button_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="RECOVERY PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_version_textview"
        style="@style/CustomTextViewStyle"
        android:text="v2.0"
        android:textSize="12sp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_register_button"
        style="@style/CustomButtonStyleWhite"
        android:background="@drawable/button_rounded_white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="45dp"
        android:text="I want to be a client..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_back_button"
        style="@style/CustomButtonStyleWhite"
        android:background="@drawable/button_rounded_white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="45dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:padding="6dp"
        android:text="Back"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
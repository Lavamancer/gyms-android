<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/carditem_card_linearlayout"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/background_rounded_border_gray"
        android:layout_width="100dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/carditem_imageview"
            android:layout_centerInParent="true"
            android:src="@drawable/payment_card_icon_mastercard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/carditem_number_textview"
            style="@style/CustomTextViewStyle"
            android:layout_marginTop="8dp"
            android:text="**** **** **** 1222"
            android:textSize="11sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/carditem_new_linearlayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/background_rounded_border_gray"
        android:layout_width="100dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/payment_card_icon_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/CustomTextViewStyle"
            android:layout_marginTop="8dp"
            android:text="Nueva tarjeta"
            android:textSize="11sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:background">@drawable/edittext_rounded</item>
    </style>

    <style name="CustomEditTextStyleForm" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_underline</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomButtonStyleRed" parent="android:Widget.EditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_red</item>
    </style>

    <style name="CustomButtonStyleRedMini" parent="android:Widget.EditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_red_mini</item>
    </style>

    <style name="CustomButtonStyleGray" parent="android:Widget.EditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_gray</item>
    </style>

    <style name="CustomTextViewStyleGrayMini" parent="android:Widget.TextView">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/background_rounded_mini_gray</item>
    </style>

    <style name="CustomTextViewStyleWhiteMini" parent="android:Widget.TextView">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red_light</item>
        <item name="android:background">@drawable/ui_subscription_lesson_type_included</item>
    </style>

    <style name="CustomTextViewStyleSubscription" parent="android:Widget.TextView">
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_25</item>
        <item name="android:textSize">9sp</item>
        <item name="android:background">@drawable/ui_subscription_sessions_inactive</item>
    </style>

    <style name="CustomButtonStyleWhite" parent="android:Widget.EditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red_light</item>
        <item name="android:background">@drawable/button_rounded_white</item>
    </style>

    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTextViewStyleForm" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

</resources>

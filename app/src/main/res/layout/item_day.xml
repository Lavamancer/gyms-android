<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dayitem_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/dayitem_day_textview"
            style="@style/CustomTextViewStyle"
            android:background="@drawable/background_calendar_day"
            android:text="29"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textColor="@color/gray_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dayitem_event_imageview"
            android:layout_centerInParent="true"
            android:src="@drawable/calendar_day_event_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_alignParentBottom="true"
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

</RelativeLayout>